<idea-plugin url="https://github.com/ulrichb/XmlDocInspections#readme">
  <id>XmlDocInspections</id>
  <name>XML Doc Inspections</name>
  <description><![CDATA[
<p>Configurable warnings for missing XML Doc comments</p>

<p>Tags: rider c# xml doc xmldoc inspection warning</p>
]]></description>
  <vendor>ulrichb</vendor>

  <depends>com.intellij.modules.rider</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable
      parentId="CodeInspectionSettingsId"
      instance="com.jetbrains.rider.settings.XmlDocInspectionsOptionsPage"
      id="preferences.XmlDocInspectionsOptionsPage"
      displayName="XML Doc Inspections"
    />
  </extensions>

</idea-plugin>
